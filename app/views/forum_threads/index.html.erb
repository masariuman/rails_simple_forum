<div class='row'>
  <div class='col-md-6 col-md-offset-3'>
    <% @threads.each do |as| %>
      <div class='thread'>
        <h4><%= as.title %></h4>

        <div class='meta'>
          <%= as.created_at %> oleh <%= as.user.name %>
        </div>

        <div class='content'>
          <%= as.content %>
        </div>

        <div class='count'>
          <%= as.forum_posts.count %> obrolan
        </div>

        <div style='clear: both'></div>
      </div>
    <% end %>
  </div>
</div>
