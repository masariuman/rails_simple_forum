<div class='col-md-6 col-md-offset-3'>
  <%= form_for @thread do |as| %>
    <div class='form-group'>
      <%= as.label :title %>
      <%= as.text_field :title, class: 'form-control' %>
    </div>


    <div class='form-group'>
      <%= as.label :content %>
      <%= as.text_field :content, rows: 10, class: 'form-control' %>
    </div>

    <div class='form-group'>
      <%= as.submit "Buat", class: 'btn btn-primary form-control' %>
    </div>
  <% end %>
</div>
