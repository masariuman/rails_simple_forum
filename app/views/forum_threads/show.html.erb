<div class='row'>
  <div class='col-md-6 col-md-offset-3'>
      <div class='thread'>
        <h4><%= @thread.title.titleize %></h4>

        <div class='meta'>
          <%= I18n.l(@thread.created_at.to_date) %> oleh <%= @thread.user.name %>
        </div>

        <div class='content'>
          <%= @thread.content %>
        </div>

      </div>
      <% if @thread.forum_posts.any? %> 
        <% @thread.forum_posts.each do |as| %>
          
          <div class='thread'>
            <div class='meta'>
              <%= I18n.l(as.created_at.to_date) %> oleh <%= as.user.name %>
            </div>

            <div class='content'>
              <%= as.content %>
            </div>
          </div>
        <% end %>
      <% else %>
        <div>
          Jadilah yang pertama melakukan tanggapan
        </div>
      <% end %>
  </div>
</div>
